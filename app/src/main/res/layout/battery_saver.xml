<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/hourmain"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="8"
      android:textColor="@color/black"
      android:textSize="@dimen/_30sdp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toStartOf="@+id/textView4"
      app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
      />


  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:text=" h"
      android:textColor="@color/black"
      android:textSize="@dimen/_24sdp"
      android:translationY="-120dp"
      app:layout_constraintBottom_toBottomOf="@+id/hourmain"
      app:layout_constraintEnd_toStartOf="@+id/space"
      app:layout_constraintTop_toTopOf="@+id/hourmain"
      />

  <TextView
      android:id="@+id/minutesmain"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="15"
      android:textColor="@color/black"
      android:textSize="@dimen/_30sdp"
      android:translationY="-120dp"
      app:layout_constraintBottom_toBottomOf="@+id/hourmain"
      app:layout_constraintStart_toEndOf="@+id/space"
      app:layout_constraintTop_toTopOf="@+id/hourmain"
      app:layout_constraintVertical_bias="0.0"
      />
  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" m"
      android:textColor="@color/black"
      android:textSize="@dimen/_24sdp"
      android:translationY="-120dp"
      app:layout_constraintBottom_toBottomOf="@+id/minutesmain"
      app:layout_constraintStart_toEndOf="@+id/minutesmain"
      app:layout_constraintTop_toTopOf="@+id/minutesmain"
      />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/charging_time_remaning"
      android:textColor="@color/black"
      android:textSize="@dimen/_18sdp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/hourmain"
      />
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/lottieAnimationView"
      android:layout_width="400dp"
      android:layout_height="400dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:lottie_autoPlay="true"
      android:translationY="-50dp"
      app:lottie_fileName="6624-moving-circles.json"
      app:lottie_loop="true"
      />
  <Space
      android:id="@+id/space"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
      />


  <TextView
      android:id="@+id/tvLevel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="30%"
      android:textColor="@color/black"
      android:textSize="80sp"
      android:textStyle="bold"
      android:translationY="-50dp"
      app:layout_constraintBottom_toBottomOf="@+id/lottieAnimationView"
      app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView"
      app:layout_constraintHorizontal_bias="0.52"
      app:layout_constraintStart_toStartOf="@+id/lottieAnimationView"
      app:layout_constraintTop_toTopOf="@+id/lottieAnimationView"
      />


</androidx.constraintlayout.widget.ConstraintLayout>